    "@nestjs/core": "^8.0.11",
    "@nestjs/microservices": "^8.0.11",
    "@nestjs/platform-express": "^8.0.11",
    "@nestjs/typeorm": "^8.0.2",
    "grpc": "^1.24.11",
    "joi": "^17.4.2",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.4.0",
    "typeorm": "^0.2.38",
    "typeorm-naming-strategies": "^2.0.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^8.1.2",
    "@nestjs/schematics": "^8.0.3",
    "@nestjs/testing": "^8.0.11",
